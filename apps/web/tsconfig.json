{
  "extends": "../../packages/config/tsconfig.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    // Override paths for the web app (most important for Vercel)
    "paths": {
      "@/*": ["./*"]
    },
    "allowJs": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ]
}
