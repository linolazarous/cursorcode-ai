{
  "extends": "../../packages/config/tsconfig.json",

  "compilerOptions": {

    "plugins": [
      {
        "name": "next"
      }
    ],

    "baseUrl": ".",


    "paths": {

      "@/*": [
        "../../packages/ui/*"
      ],

      "@cursorcode/ui": [
        "../../packages/ui"
      ],

      "@cursorcode/ui/*": [
        "../../packages/ui/*"
      ],

      "@cursorcode/types": [
        "../../packages/types"
      ],

      "@cursorcode/db": [
        "../../packages/db"
      ]

    },


    "allowJs": true,
    "jsx": "preserve",

    "moduleResolution": "bundler",

    "types": [
      "node",
      "jest"
    ]

  },

  "include": [

    "next-env.d.ts",

    "**/*.ts",
    "**/*.tsx",

    ".next/types/**/*.d.ts",

    "../../packages/ui/**/*.ts",
    "../../packages/ui/**/*.tsx",

    "../../packages/types/**/*.ts",
    "../../packages/types/**/*.tsx"

  ],

  "exclude": [
    "node_modules",
    ".next"
  ]

}
